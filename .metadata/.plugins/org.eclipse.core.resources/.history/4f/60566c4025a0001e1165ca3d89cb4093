public class ReverseWord {
    public static void main(String[] args) {
        String sentence = "This is a sample sentence with words to reverse. Another example with Aardvark.";
        String[] words = sentence.split("\\s+");

        for (String word : words) {
            if (word.toLowerCase().contains("a")) {
                StringBuilder reversed = new StringBuilder(word).reverse();
                sentence = sentence.replace(word, reversed);
                break;
            }
        }

        System.out.println("Modified Sentence: " + sentence);
    }
}
